@model IEnumerable<DBPlatform_v1._0.Models.Team>
@{
    ViewBag.Title = "Каталог команд";
}


<h2>Каталог игроков</h2>
<p>
    @Html.ActionLink("Добавить команду", "CreateTeam")
</p>
<table>
    <tr>
        <th>Название команды</th>
        <th>Тренер</th>
        <th>Игроки в команде</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Players.Count)
            </td>

            <td>
                @Html.ActionLink("Редактировать", "EditTeam", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeleteTeam", new { id = item.Id })
            </td>
        </tr>
    }
</table>
