@model DBPlatform_v1._0.Models.ContactEditView
@{
    /**/

    ViewBag.Title = "Edit Contact";
}
<style>
    h4 {
        text-align: center;
    }
</style>
<h2>Edit Contact</h2>

<h4>@Html.ActionLink("Create new contact", "Create")</h4>

@Styles.Render("~/Content/CreateCompany.css")
@Html.Partial("_search")
@if (Model != null)
{
    using (Html.BeginForm("Edit", "Contacts", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset class="form-create">
            @Html.HiddenFor(m => m.Id)<p>
                @Html.LabelFor(model => model.first_name, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
            </p>
            <p>
                @Html.LabelFor(model => model.last_name, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
            </p>
            <p>
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
            </p>
            <p>
                @Html.LabelFor(model => model.prooflink, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.prooflink, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
            </p>
            <p>
                <label for="selectCountry" class="control-label col-md-2">Country</label>
                @Html.DropDownListFor(model => model.CountryId, Model.selectListCountries, "--Select Country--", new { id = "selectCountry", @class = "form-control form-control-lg" })
            </p>
            <p>
                <label for="selectTitle" class="control-label col-md-2">Title</label>
                @Html.DropDownListFor(model => model.TitleId, Model.selectListTitles, "--Select Title--", new { id = "selectTitle", @class = "form-control form-control-lg" })
            </p>
            <p>
                <label for="selectCompany" class="control-label col-md-2">Company</label>
                @Html.DropDownListFor(model => model.CompanyId, Model.selectListCompanies, "--Select Company--", new { id = "selectCompany", @class = "form-control form-control-lg" })
            </p>
            <p><button type="submit" class="btn btn-success" value="Save">Save</button></p>

        </fieldset>
    }
}
<br />
