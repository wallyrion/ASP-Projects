@model DBPlatform_v1._0.Models.RegisterModel


@{
    ViewBag.Title = "Регистрация";
    Layout = null;
}
@Styles.Render("~/Content/login.css")


<div class="container">
    <section class="form-3">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-3-old", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            <div class="clearfix">
                @Html.LabelFor(model => model.login, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.login)
                @Html.ValidationMessageFor(model => model.login)

            </div>

            <div class="clearfix">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)

            </div>

            <div class="clearfix">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)

            </div>

            <div class="clearfix">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)

            </div>



            <div class="clearfix">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>


        }
        <div><button class="register-login-btn" onclick="location.href='@Url.Action("Login", "Account")'">Login</button></div>

    </section>
</div>
